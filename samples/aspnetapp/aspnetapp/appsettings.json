{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Debug"
    ],

    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },

    "WriteTo": [{
      "Name": "File",
      "Args": {
        "path": "./log.json",
        "fileSizeLimitBytes": "100000",
        "retainedFileCountLimit": 3,
        "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog"
      }
    }],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "Application": "My.API",
    }
  }  
}